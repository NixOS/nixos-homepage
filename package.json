{
  "name": "next",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build:manuals": "nix build .#manuals -o ./result && mkdir -p ./dist/manual && cp --no-preserve=mode,ownership -RL ./result/* ./dist/manual/",
    "build:pills": "nix build .#pills -o ./result && mkdir -p ./dist/guides/nix-pills && cp --no-preserve=mode,ownership -RL ./result/* ./dist/guides/nix-pills/",
    "build:well-known": "cp -prd ./.well-known ./dist/",
    "build": "astro build && npm run build:manuals && npm run build:pills && npm run build:well-known",
    "preview": "astro preview",
    "astro": "astro",
    "linkcheck:minimal": "linkchecker http://localhost:4321 --ignore-url /manual --ignore-url /guides --ignore-url /tutorials",
    "linkcheck:full": "linkchecker http://localhost:4321"
  },
  "dependencies": {
    "@astrojs/mdx": "^2.0.0",
    "@astrojs/rss": "^4.0.1",
    "@astrojs/sitemap": "^3.0.5",
    "@astrojs/tailwind": "^5.0.3",
    "@fontsource-variable/fira-code": "^5.0.16",
    "@fontsource-variable/overpass": "^5.0.17",
    "@fontsource-variable/roboto-flex": "^5.0.8",
    "@xmldom/xmldom": "^0.8.10",
    "asciinema-player": "^3.6.3",
    "astro": "^4.0.3",
    "astro-heroicons": "^0.3.0",
    "astro-icon": "^0.8.2",
    "astro-seo": "^0.8.0",
    "daisyui": "^4.0.4",
    "htmx.org": "^1.9.9",
    "markdown-it": "^14.0.0",
    "sanitize-html": "^2.11.0",
    "tailwindcss": "^3.3.6",
    "turndown": "^7.1.2"
  }
}
