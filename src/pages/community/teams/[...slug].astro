---
import { getCollection } from "astro:content";

import Layout from "../../../layouts/Layout.astro";
import PageHeader from "../../../components/layout/PageHeader.astro";
import Container from "../../../components/layout/Container.astro";
import Tag from "../../../components/ui/Tag.astro";

export async function getStaticPaths() {
  const teamEntries = await getCollection("teams");
  return teamEntries.map((entry) => ({
    params: { slug: entry.slug.split("_")[1] },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.name}>
  <PageHeader text={entry.data.name} />
  <Container class="my-8">
    <aside
      class="float-right bg-nixlighterblue rounded-xl px-4 py-3 mb-4 ml-4 w-full sm:w-1/2 md:max-w-96"
    >
      <h1 class="text-4xl font-extrabold text-nixdarkblue">Members</h1>
      <ul class="mt-2 list-disc ml-4">
        {
          entry.data.members.map((member) => (
            <li>
              {member.name}
              -
              {member.username && (
                <a href={"https://discourse.nixos.org/u/" + member.username}>
                  @{member.username}
                </a>
              )}
              {member.title && (
                -
                <Tag outline>
                  {member.title}
                </Tag>
              )}
            </li>
          ))
        }
      </ul>
      <h1 class="text-4xl font-extrabold text-nixdarkblue mt-8">Contact</h1>
      <ul class="mt-2 list-disc ml-4">
        {
          entry.data.contact.map((contact) => (
            <li>
              <a href={contact.href}>{contact.name}</a>
            </li>
          ))
        }
      </ul>
    </aside>
    <article>
      <Content />
    </article>
  </Container>
</Layout>
