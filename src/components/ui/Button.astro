---
interface Props {
    color?: "orange" | "green" | "lightblue" | "semidarkblue";
    size?: "sm" | "lg" | "lg-full" | "sm-mobfull";
    href?: string | null;
    type?: "button" | "submit" | "reset";
    classList?: string[];
}

const colorMap = {
    "orange": "bg-nixorange",
    "lightblue": "bg-nixlightblue",
    "semidarkblue": "bg-nixsemidarkblue",
    "green": "bg-nixgreen"
}

const sizeMap = {
    "sm": "px-10 py-2.5 rounded-3xl",
    "sm-mobfull": "px-8 py-2.5 rounded-3xl md:w-auto w-full text-center",
    "lg": "px-14 py-4 rounded-2xl",
    "lg-full": "text-center py-4 w-full rounded-2xl"
}

const {
    color = "orange",
    size = "sm",
    href = null,
    type = "button",
    classList = [],
    } = Astro.props;

const localClassList = `${colorMap[color]} font-bold ${sizeMap[size]} text-white drop-shadow-[0_4px_1px_rgba(0,0,0,0.2)]`;
---

{href ? (
  <a href={href} class:list={["!text-white !no-underline", localClassList, classList]}>
    <slot/>
  </a>
) : (
  <button type={type} class={localClassList}>
    <slot/>
  </button>
)}
