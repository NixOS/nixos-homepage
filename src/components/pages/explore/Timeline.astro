---

interface Props {
  number: string;
  imageLocation?: "left" | "right";
  imageSrc: string;
  heading: string;
  subHeading: string;
  tags: Array<{ href: string | null, text:string}>;
  paragraphs: string[];
  emphasis?: string | null;
}

const {
  number = 0,
  imageLocation = "left",
  imageSrc,
  ...textProps
} = Astro.props;

import TimelineCenter from "./TimelineCenter.astro";
import TimelineText from "./TimelineText.astro";

const textCommonClasses = "flex flex-col justify-center font-light gap-4";

---
{ imageLocation === "left"
  ?
    <div class="justify-self-end">
      <img src={imageSrc} class="pb-24" />
    </div>

    <div class:list={[textCommonClasses, "text-left", "relative"]}>
      <TimelineCenter number={number}/>
      <TimelineText {...textProps} />
    </div>
  :
    <div class:list={[textCommonClasses, "text-right"]}>
      <TimelineText {...textProps} />
    </div>

    <div class="justify-self-start relative">
      <TimelineCenter number={number}/>
      <img src={imageSrc} class="pb-24" />
    </div>
}
