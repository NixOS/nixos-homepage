---
import Container from '@/components/layout/Container.astro';
import Button from '@/components/ui/Button.astro';
---

<div class="bg-nix-blue py-16 text-white md:px-12 md:py-16">
  <Container class="grid gap-8 md:grid-cols-2 md:px-12">
    <div class="flex flex-col gap-4">
      <img src="/images/donate/merch.svg" class="h-64 md:h-full" />
    </div>

    <div class="flex flex-col justify-center gap-4">
      <h2 class="max-w-96 font-heading text-4xl font-bold leading-tight">
        NixOS T-shirts, mugs and more...
      </h2>

      <p>Donate to NixOS foundation by purchasing NixOS merchandise.</p>

      <div class="flex flex-col justify-stretch gap-4 md:flex-row">
        <Button
          color="green"
          size="sm"
          href="https://www.redbubble.com/people/mogorman/shop"
        >
          Go to the shop (RedBubble)
        </Button>
      </div>
    </div>
  </Container>
</div>
