---
import InlineSVG from '../util/InlineSVG.astro';

interface Props {
    style?: "slope",
    mirrorX?: boolean,
    mirrorY?: boolean
}

const styleMap = {
    "slope": "/src/assets/image/divider/slope_down.svg"
}

const { style = "slope", mirrorX = false, mirrorY = false } = Astro.props;
---

<InlineSVG src={styleMap[style]} class:list={["select-none",
{
    "-scale-x-100": mirrorX,
    "-scale-y-100": mirrorY
}
]} role="divider" style=`${mirrorY ? "margin-bottom: -0.1px;" : "margin-top: -0.1px;"}`/>

