---

interface Props {
  text?: string;
  subtext?: string;
  parentPath?: string;
}

const path = Astro.url.pathname.split('/');
const autoParentPath = path.slice(0, path.length - 1).join('/');
const { text = '', subtext, parentPath = autoParentPath }: Props = Astro.props;

import Container from "./Container.astro";

---
<div class="bg-[url('/divider/header_nixdarkblue.svg')] bg-bottom bg-no-repeat bg-cover py-24 hidden md:block">
  <Container class="text-white grid grid-cols-3">
    <div class="flex flex-col gap-4 col-span-2">
      {path.length > 2 && (
        <a href={parentPath}>
          <span class="text-nixblue">‚Üê</span> Back
        </a>
      )}
      <h1 class="text-5xl font-bold text-left">
        {text}
      </h1>
      {subtext && (
        <p class="text text-left">
          {subtext}
        </p>
      )}
    </div>
  </Container>
</div>

<div class="bg-nixdarkblue text-white md:hidden">
  <Container class="px-12 py-16">
    <h1 class="text-3xl font-bold text-center">
      {text}
    </h1>
  </Container>
</div>
