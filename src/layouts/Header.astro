---
import {Icon} from "astro-icon";
import { Image } from 'astro:assets';
import flakeBlue from "../assets/image/flake-blue.svg";
const menuItems = [
    {
        name: "Explore",
        link: "/explore"
    },
    {
        name: "Download",
        link: "/download"
    },
    {
        name: "Learn",
        link: "/learn"
    },
    {
        name: "Community",
        link: "/community"
    },
    {
        name: "Blog",
        link: "/blog"
    },
    {
        name: "Donate",
        link: "/donate"
    }
]
---

<header class="bg-white text-black font-light shadow-lg">
    <div class="mx-4 md:mx-auto md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl flex flex-col md:flex-row justify-between items-center">
        <div class="text-5xl font-normal gap-2 flex justify-start items-center">
            <Image class="h-16 w-16" src={flakeBlue} alt="Nix Logo" />
            <span class="invisible lg:visible">Nix</span>
        </div>
        <div class="flex gap-8 flex-col md:flex-row">
            {menuItems.map((item) => (
                <a class="pt-8 pb-6 border-b-transparent hover:border-b-nixlightblue border-b-4" href={item.link}>{item.name}</a>
            ))}
            <a class="pt-7 pb-6 border-b-transparent hover:border-b-nixlightblue border-b-4" href="/search">
                <Icon alt="Search" class="h-8 text-nixdarkblue" pack="mdi" name="search" />
            </a>
        </div>
    </div>
</header>
