---
interface Props {
  text?: string;
  subtext?: string;
  parentPath?: string;
}

const { text = '', subtext, parentPath = undefined }: Props = Astro.props;

import Container from './Container.astro';
---

<div
  class="md:inline-svg-header-nixdarkblue bg-secondary-afghani-blue-45 block bg-cover bg-bottom bg-no-repeat py-16 md:bg-transparent md:py-24"
>
  <Container class="text-primary-white grid grid-cols-3">
    <div class="col-span-2 flex flex-col gap-4">
      {
        parentPath && (
          <a
            href={parentPath}
            class="text-primary-white! -mt-6 -mb-4 hidden md:inline"
          >
            <span class="text-nixblue">‚Üê</span> Back
          </a>
        )
      }
      <h1 class="font-heading text-left text-4xl font-bold">
        {text}
      </h1>
      {subtext && <p class="text text-left" set:html={subtext} />}
    </div>
  </Container>
</div>
