---
import { Icon } from 'astro-icon/components';
import { getEntry } from 'astro:content';

import Container from '@/components/layout/Container.astro';
import Link from '@/components/util/Link.astro';
import { Image } from 'astro:assets';

const footerMenu = await getEntry('menus', 'footer');

import logoWHite from '@NixOS/branding/artifacts/internal/nixos-logomark-white-flat-none.svg';
---

<footer>
  <div
    class="bg-secondary-afghani-blue-25 text-primary-white-95 clear-both font-light"
  >
    <Container>
      <div
        class="flex flex-col flex-wrap gap-x-4 gap-y-8 pt-12 pb-10 sm:flex-row"
      >
        {
          footerMenu.data.sections.map((menu) => (
            <div class="flex-1 basis-1/2 md:basis-0">
              <h4 class="font-heading text-secondary-afghani-blue-85 mb-2 text-xl font-bold">
                {menu.name}
              </h4>
              <ul class="font-extralight">
                {menu.items.map((item) => (
                  <li class="border-secondary-afghani-blue-55 border-b-1 last:border-b-0">
                    <Link
                      class:list={['block py-3 hover:underline md:py-2']}
                      href={item.link}
                    >
                      {item.name}
                    </Link>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>

      <hr class="border-secondary-afghani-blue-55" />

      <div
        class="flex flex-col flex-wrap gap-4 py-4 font-extralight lg:flex-row lg:gap-0"
      >
        <div class="flex basis-1/2 gap-2">
          <Image src={logoWHite} alt="NixOS" class="inline-block h-14 w-14" />
          <div class="flex flex-col justify-center">
            <div>
              Copyright Â© {new Date().getFullYear()} NixOS contributors
            </div>
            <span class="flex gap-2">
              <Link
                href="/imprint"
                aria-label="Imprint"
                class:list={'underline decoration-dotted'}
              >
                Imprint
              </Link>
              <Link
                href="/privacy"
                aria-label="Privacy Policy"
                class:list={'underline decoration-dotted'}
              >
                Privacy Policy
              </Link>
              <Link
                href="https://github.com/NixOS/nixos-homepage/blob/main/LICENSES/CC-BY-SA-4.0.txt"
              >
                <abbr
                  title="Creative Commons Attribution Share Alike 4.0 International"
                >
                  CC-BY-SA-4.0
                </abbr>
              </Link>
            </span>
          </div>
        </div>

        <hr class="border-secondary-afghani-blue-75 lg:hidden" />

        <div
          class="flex basis-1/2 justify-between gap-4 font-extralight lg:justify-end"
        >
          <h4 class="my-auto">Connect with us:</h4>
          <div class="my-auto flex gap-4">
            {
              footerMenu.data.social.map((item) => (
                <Link
                  class="hover:text-secondary-afghani-blue-75 text-primary-white"
                  href={item.link}
                  aria-label={`Connect with us on ${item.name}`}
                >
                  <Icon
                    class="h-5 w-5"
                    name={`simple-icons:${item.name.toLowerCase()}`}
                  />
                </Link>
              ))
            }
          </div>
        </div>
      </div>
    </Container>
  </div>
</footer>
<div class="fixed right-0 bottom-0 left-0 z-50">
  <Container class="relative">
    <a
      href="#"
      id="scroll-to-top"
      class="bg-secondary-afghani-blue-25 hover:bg-secondary-afghani-blue-45 text-primary-white absolute right-4 bottom-4 z-50 rounded-xl drop-shadow-md transition-all duration-100 md:-right-14 md:bottom-8"
    >
      <Icon class="h-14 w-14 p-1" name="mdi:keyboard-arrow-up" />
    </a>
  </Container>
</div>
