---
export interface Props {
  id: number;
  onBlueBackground?: boolean;
}

const { id, onBlueBackground } = Astro.props;
---

<span class="inline-block">
  <details class="inline">
    <summary class="inline-block cursor-pointer">
      <sup
        class:list={[
          onBlueBackground && 'hover:bg-black-95 text-white',
          !onBlueBackground && 'text-afghani-blue hover:text-afghani-blue',
        ]}>[{id}]</sup
      >
    </summary>
    <div
      class:list={[
        'bg-black-75 absolute mt-1 max-w-sm rounded-sm border p-2 text-sm shadow-lg',
        !onBlueBackground && 'bg-white!',
        onBlueBackground && 'bg-afghani-blue-15!',
      ]}
    >
      <slot />
    </div>
  </details>
</span>

<style>
  @reference "./../../styles/base.css";

  details[open] > summary > sup.text-white {
    @apply text-black-95;
  }
  details[open] > summary > sup.text-afghani-blue {
    @apply text-afghani-blue-45;
  }
</style>

<script>
  // Optional: Close other open details when one is opened
  document.addEventListener('click', (event) => {
    if (
      event.target instanceof HTMLElement &&
      event.target.tagName === 'SUMMARY'
    ) {
      document.querySelectorAll('details[open]').forEach((detail) => {
        if (detail !== event.target.parentElement) {
          detail.removeAttribute('open');
        }
      });
    }
  });
</script>
