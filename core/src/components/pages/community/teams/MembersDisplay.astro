---
const {
  title = 'Members',
  isSubteam = false,
  members,
  contact,
  class: extraClasses,
} = Astro.props;
const titleClasses = `text-3xl font-heading font-bold text-secondary-afghani-blue`;
---

<aside
  class:list={[
    !isSubteam && 'bg-secondary-afghani-blue-95 w-full rounded-xl px-4 py-3',
    extraClasses,
  ]}
>
  <h2 class={titleClasses}>{title}</h2>
  <ul class="mt-2 font-light">
    {
      members.map((member) => (
        <li class="border-b-secondary-afghani-blue-75-hover flex flex-col border-b-1 pt-2 pb-2 first:pt-0 last:border-b-0 last:pb-0">
          <span class="font-medium">
            {member.name}
            {member.discourse && (
              <>
                (
                <a href={'https://discourse.nixos.org/u/' + member.discourse}>
                  @{member.discourse}
                </a>
                )
              </>
            )}
            {member.github && (
              <>
                (
                <a href={'https://github.com/' + member.github}>
                  @{member.github}
                </a>
                )
              </>
            )}
          </span>
          {member.title && <span>{member.title}</span>}
          {member.affiliation && (
            <span class="text-primary-black-35 text-sm">
              {member.affiliation}
            </span>
          )}
        </li>
      ))
    }
  </ul>
  {
    contact && (
      <>
        <h2 class="font-heading text-secondary-afghani-blue mt-4 text-3xl font-bold">
          Contact
        </h2>
        <ul class="mt-2 ml-4 list-disc">
          {contact.map((contact) => (
            <li class="mb-1 last:mb-0">
              <a href={contact.href}>{contact.name}</a>
            </li>
          ))}
        </ul>
      </>
    )
  }
</aside>
