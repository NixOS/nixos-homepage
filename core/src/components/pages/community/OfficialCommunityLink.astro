---
import { Icon } from 'astro-icon/components';

interface Props {
  href: string;
  iconName: string;
  name?: string;
  description?: string;
  type?: 'full' | 'mobile_icon_desktop_name' | 'icon';
  class?: string;
}

const {
  href,
  iconName,
  name = '',
  description = '',
  type = 'full',
  class: extraClasses,
} = Astro.props;
---

<li
  class:list={[
    'bg-secondary-afghani-blue hover:bg-secondary-afghani-blue-45 flex-1 cursor-pointer rounded-xl p-4 transition-all',
    type === 'icon' && 'flex flex-col items-center justify-center',
    extraClasses,
  ]}
>
  <a href={href} class="text-primary-white! no-underline!">
    <div
      class:list={[
        'flex gap-2 text-xl font-bold',
        (type !== 'full' || description === '') && 'h-full',
        type === 'mobile_icon_desktop_name' &&
          'flex-col items-center justify-center md:flex-row md:justify-start',
      ]}
    >
      <Icon name={iconName} aria-hidden="true" class="h-8 w-8" />
      {
        type !== 'icon' && (
          <span
            class:list={[
              'mt-4.25 ml-2 leading-0',
              type === 'mobile_icon_desktop_name' && 'hidden md:block',
            ]}
          >
            {name}
          </span>
        )
      }
    </div>
    {
      description !== '' && type === 'full' && (
        <div class="mt-3 -mb-1">{description}</div>
      )
    }
  </a>
</li>
